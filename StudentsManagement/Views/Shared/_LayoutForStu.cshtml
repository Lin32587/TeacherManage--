<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="container">
        <header class="blog-header py-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 text-center">
                    <span class="blog-header-logo text-dark" href="#" style="font-family:'LEIXO DEMO';font-weight:bold; font-size:large">Teacher management system</span>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Signin","Sign")">Login out</a>
                </div>
            </div>
        </header>
    </div>

    <div class="container body-content mt-md-5">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @DateTime.Now.Month - @DateTime.Now.Day - Lin's Teacher management system</p>
        </footer>
    </div>
</body>
</html>